@using Microsoft.Extensions.Options
@model Listing.Domain.DTO.WishlistDto

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <h3>My wishlist</h3>

    <div class="row">
        @foreach (var item in Model.Listings)
        {
            <div class="col-md-4" style="padding-top: 15px;">
                <div class="card-profile">
                    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner">
                            @for (int i = 0; i < item.Listing.ListingImages.Count; i++)
                            {
                                var active = i == 0 ? "active" : "";
                                var image = item.Listing.ListingImages.ElementAt(i);

                                <div class="carousel-item @active">
                                    <img id="image-listing" src="@image.ImageSrc" style="min-width: 360px;" width="100%" height="220">
                                </div>
                            }
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                    <div class="card-header text-center border-0">
                        @item.Listing.Title
                    </div>
                    <div class="card-body description">
                        <p class="desc-text">
                            @item.Listing.Description
                        </p>
                        <div class="row">
                            <div class="col-12 price">
                                Price:
                                <span id="price">
                                    @item.Listing.Price
                                </span> $
                                <br />
                                <a class="see-more" asp-action="Details" asp-route-id="@item.ListingId" asp-controller="Listings">
                                    See more details
                                </a>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        }
    </div>

</div>