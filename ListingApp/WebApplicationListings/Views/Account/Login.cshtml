@model Listing.Domain.Identity.UserLoginDto
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    @Html.ValidationSummary()
    <form asp-action="Login" asp-controller="Account" method="post">

        <div class="logindiv row">

            <div class="col-sm-12 text-center">
                <h2>Login</h2>
            </div>

            <div class="form-group col-sm-12">
                <label asp-for="@Model.Email" class="col-lg-6 offset-3 control-label"></label>
                <div class="col-lg-6 offset-3">
                    @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Email)
                </div>
            </div>

            <div class="form-group col-sm-12">
                <label asp-for="@Model.Password" class="col-lg-6 offset-3 control-label"></label>
                <br>
                <div class="col-lg-6 offset-3">
                    @Html.PasswordFor(m => m.Password, new { placeholder = "Password", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Password)
                </div>
            </div>

            <div class="form-group col-lg-6 offset-3 text-center mt-1">
                <button type="submit" class="btn btn-success">Login</button>
            </div>
            <div class="form-group col-lg-6 offset-3 text-center">
                <a asp-action="Register" asp-controller="account">Don't have an account? Click to Register</a>
            </div>
        </div>
    </form>
</div>  