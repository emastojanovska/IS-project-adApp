@model IEnumerable<ListingsAdminApplication.Models.ListingPost>

@{
    ViewData["Title"] = "Listings";
}


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Discount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateCreated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateUpdated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Discount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateCreated)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateUpdated)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Location.City)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> 
                </td>
                <td>
                    @if (item.Status == "undefined")
                    {
                        <button type="button" class="btn btn-success mb-2" style="background: #29ab87 !important" onclick="ShowModal('@item.Id')">
                            Approve
                        </button>

                        <!-- Modal -->
                        <div class="modal fade" id="@item.Id" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel">Approve</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        Are you sure you want to approve this post?
                                    </div>
                                  @*  <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                        <form asp-action="Validate">
                                            <input type="hidden" name="action" value="approved" />
                                            <input type="hidden" asp-for="@item.Id" name="id" />
                                            <input type="submit" value="Approve" class="btn btn-danger" />
                                        </form>
                                    </div>*@

                                     <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                        <a asp-action="Validate" asp-route-id="@item.Id"
                                           asp-route-actionType="approved">Approve</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </td>
                <td>
                    @if (item.Status == "undefined")
                    {
                        <button type="button" class="btn btn-danger mb-2" style="background: #e3242b !important" onclick="ShowModal('@item.Id')">
                            Disapprove
                        </button>
                        <!-- Modal -->
                        <div class="modal fade" id="@item.Id" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel">Disapprove</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        Are you sure you want to disapprove this post?
                                    </div>
                                    @*   <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                        <form asp-action="Validate">
                                            <input type="hidden" asp-for="@item.Id" name="id" />
                                            <input type="hidden" name="action" value="disapproved" />
                                            <input type="submit" value="Disapprove" class="btn btn-danger" />
                                        </form>
                                    </div>*@
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                        <a asp-action="Validate" asp-route-id="@item.Id"
                                           asp-route-actionType="disapproved">Disapprove</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                </td>
            </tr>

        }
    </tbody>
</table>
<div>
    <a asp-action="Index">Back to List</a>
</div>



@section scripts{
    <script>
        function ShowModal(id) {
            var call = "#" + id;
            $(call).modal('toggle');
        };
    </script>

}