@model IEnumerable<ListingsAdminApplication.Models.ListingPost>

@{
    ViewData["Title"] = "Listings";
}

<div class="row">
    <div class="col-md-6">
        <h1>Ads</h1>
    </div>
    <div class="col-md-6 text-right">
        <a class="btn btn-dark mb-3" asp-action="Inactive">VIEW PENDING REQUESTS</a>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Discount)
            </th>
            <th>
                Created
            </th>
            <th>
                Updated
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{var i = 0; }
        @foreach (var item in Model)
        {
            i = i + 1;
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Discount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateCreated)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateUpdated)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Location.City)
                </td>

                <td>
                    <a asp-action="Details" class="btn btn-info" asp-route-id="@item.Id">Details</a>
                </td>
                <td>
                    @if (item.Status == "approved")
                    {
                        <b style="color:#29ab87" class="text-uppercase">approved</b>
                    }
                    else if (item.Status == "disapproved")
                    {
                        <b style="color:#e3242b" class="text-uppercase">disapproved</b>
                    }
                    else if (item.Status == "undefined")
                    {
                        <button type="button" class="btn btn-success mb-2" style="background: #29ab87 !important" onclick="ShowModal('@item.Id')">
                            Approve
                        </button>

                        <!-- Modal -->
                        <div class="modal fade" id="@item.Id" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel">Approve</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        Are you sure you want to approve this listing post??
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                        <a asp-action="Validate" asp-route-id="@item.Id"
                                           asp-route-actionType="approved">Approve</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    @if (item.Status == "undefined")
                    {
                        <button type="button" class="btn btn-danger mb-2" style="background: #e3242b !important" data-toggle="modal" data-target="#exampleModal2">
                            Disapprove
                        </button>
                        <!-- Modal -->
                        <div class="modal fade" id="exampleModal2" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel">Disapprove</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        Are you sure you want to disapprove this listing post??
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                        <a asp-action="Validate" asp-route-id="@item.Id"
                                           asp-route-actionType="disapproved">Disapprove</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@section scripts{
    <script>
        function ShowModal(id) {
            var call = "#" + id;
            $(call).modal('toggle');
        };
    </script>

}